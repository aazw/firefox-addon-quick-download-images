{
  "name": "vsc-firefox-addon-quick-download-images",
  "image": "aazw/devcontainers-devbox-js:4",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "emeraldwalk.runonsave",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "anthropic.claude-code",
        "openai.chatgpt"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "mounts": [
    {
      "source": "${localWorkspaceFolder}/.claude",
      "target": "/home/vscode/.claude",
      "type": "bind"
    }
  ],
  "containerUser": "root", // コンテナ起動時・初期化処理のユーザ. docker psできるようにするために必要
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "TZ": "Asia/Tokyo",
    "TASK_X_ENV_PRECEDENCE": "1"
  },
  "runArgs": [
    "--name",
    "vsc-firefox-addon-quick-download-images",
    "--add-host",
    "host.docker.internal:host-gateway"
  ],
  "postAttachCommand": "bun install"
}
