{
  // ${localWorkspaceFolderBasename} はgit worktreeを同階層同列運用する場合に操作中の対象の識別ができない問題に対応するためのもの
  "name": "vsc-firefox-addon-quick-download-images-${localWorkspaceFolderBasename}-${devcontainerId}",
  "image": "aazw/devcontainers-devbox-js:6",
  "initializeCommand": "bash -lc 'mkdir -p \"${localWorkspaceFolder}/.devcontainer/.state/claude\" \"${localWorkspaceFolder}/.devcontainer/.state/codex\"'",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "emeraldwalk.runonsave",
        "ms-azuretools.vscode-containers",
        "ms-azuretools.vscode-docker",
        "tamasfe.even-better-toml",
        "anthropic.claude-code",
        "openai.chatgpt"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  // git worktree の同階層同列運用をDevContainer内でも利用可能する場合は有効化する (git worktree add --relative-paths 運用前提)
  // "workspaceMount": "source=${localWorkspaceFolder}/..,target=/workspaces,type=bind,consistency=cached",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "mounts": [
    {
      // ~/.claude に保存される claude code のセッションを永続化 (DevContainer再作成時など)
      "source": "${localWorkspaceFolder}/.devcontainer/.state/claude",
      "target": "/home/vscode/.claude",
      "type": "bind"
    },
    {
      // ~/.codex に保存される codex のセッションを永続化 (DevContainer再作成時など)
      "source": "${localWorkspaceFolder}/.devcontainer/.state/codex",
      "target": "/home/vscode/.codex",
      "type": "bind"
    }
  ],
  // containerUser は、コンテナ起動時・初期化処理のユーザ. docker psできるようにするために必要
  "containerUser": "root",
  "remoteUser": "vscode",
  "remoteEnv": {
    "LOCAL_WORKSPACE_FOLDER": "${localWorkspaceFolder}",
    "TZ": "Asia/Tokyo",
    "TASK_X_ENV_PRECEDENCE": "1"
  },
  "runArgs": [
    "--name",
    "vsc-firefox-addon-quick-download-images-${localWorkspaceFolderBasename}-${devcontainerId}",
    "--add-host",
    "host.docker.internal:host-gateway"
  ],
  "postAttachCommand": "task init"
}
